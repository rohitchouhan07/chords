#!/bin/sh

#taking input from the argument
chord=$1


#colors

bold='[1m'
black='[30m'
red='[31m'
green='[32m'
yellow='[33m'
blue='[34m'
magenta='[35m'
cyan='[36m'
white='[37m'
grey='[90m'
reset='[0m'

#selecting the appropriate chord diagram
case $chord in
	[Aa]) cat <<-EOF
	e |-----0-----|
	B |-----2-----|
	G |-----2-----|
	D |-----2-----|
	A |-----0-----|
	E |-----x-----|
	EOF
	;;
	
	[Aa]maj7) cat <<-EOF
	e |-----0-----|
	B |-----2-----|
	G |-----1-----|
	D |-----2-----|
	A |-----0-----|
	E |-----x-----|
	EOF
	;;
	
	[Aa]7) cat <<-EOF
	e |-----0-----|
	B |-----2-----|
	G |-----0-----|
	D |-----2-----|
	A |-----0-----|
	E |-----x-----|
	EOF
	;;
	
	[Aa]m) cat <<-EOF
	e |-----0-----|
	B |-----1-----|
	G |-----2-----|
	D |-----2-----|
	A |-----0-----|
	E |-----x-----|
	EOF
	;;
	
	[Aa]m7) cat <<-EOF
	e |-----0-----|
	B |-----1-----|
	G |-----0-----|
	D |-----2-----|
	A |-----0-----|
	E |-----x-----|
	EOF
	;;
	
	[Bb]) cat <<-EOF
	e |-----2-----|
	B |-----4-----|
	G |-----4-----|
	D |-----4-----|
	A |-----x-----|
	E |-----x-----|
	EOF
	;;
	
	[Bb]maj7) cat <<-EOF
	e |-----x-----|
	B |-----0-----|
	G |-----3-----|
	D |-----1-----|
	A |-----2-----|
	E |-----2-----|
	EOF
	;;

	[Bb]7) cat <<-EOF
	e |-----2-----|
	B |-----0-----|
	G |-----2-----|
	D |-----1-----|
	A |-----2-----|
	E |-----x-----|
	EOF
	;;
	
	[Bb]m) cat <<-EOF
	e |-----2-----|
	B |-----3-----|
	G |-----4-----|
	D |-----4-----|
	A |-----x-----|
	E |-----x-----|
	EOF
	;;
	
	[Bb]m7) cat <<-EOF
	e |-----2-----|
	B |-----0-----|
	G |-----2-----|
	D |-----0-----|
	A |-----2-----|
	E |-----x-----|
	EOF
	;;
	
	[Cc]) cat <<-EOF   
	e |-----0------|                                            
	B |-----1------|
	G |-----0------|
	D |-----2------|
	A |-----3------|
	E |------------|
	EOF
	;;
	
	[Cc]maj7) cat <<-EOF   
	e |-----0------|                                            
	B |-----0------|
	G |-----0------|
	D |-----2------|
	A |-----3------|
	E |-----x------|
	EOF
	;;
	
	[Cc]7) cat <<-EOF   
	e |-----0------|                                            
	B |-----1------|
	G |-----3------|
	D |-----2------|
	A |-----3------|
	E |-----x------|
	EOF
	;;
	
	[Cc]m) cat <<-EOF   
	e |-----x------|                                            
	B |-----x------|
	G |-----0------|
	D |-----1------|
	A |-----3------|
	E |-----x------|
	EOF
	;;
	
	[Cc]m7) cat <<-EOF   
	e |-----x------|                                            
	B |-----x------|
	G |-----3------|
	D |-----1------|
	A |-----3------|
	E |-----x------|
	EOF
	;;
	
	[Dd]) cat <<-EOF   
	e |-----2------|                                            
	B |-----3------|
	G |-----2------|
	D |-----0------|
	A |-----x------|
	E |-----x------|
	EOF
	;;
	
	[Dd]maj7) cat <<-EOF   
	e |-----2------|                                            
	B |-----2------|
	G |-----2------|
	D |-----0------|
	A |-----x------|
	E |-----x------|
	EOF
	;;
	
	[Dd]7) cat <<-EOF   
	e |-----2------|                                            
	B |-----1------|
	G |-----2------|
	D |-----0------|
	A |-----x------|
	E |-----x------|
	EOF
	;;
	
	[Dd]m) cat <<-EOF   
	e |-----1------|                                            
	B |-----3------|
	G |-----2------|
	D |-----0------|
	A |-----x------|
	E |-----x------|
	EOF
	;;
	
	[Dd]m7) cat <<-EOF   
	e |-----1------|                                            
	B |-----1------|
	G |-----2------|
	D |-----0------|
	A |-----x------|
	E |-----x------|
	EOF
	;;
	
	[Ee]) cat <<-EOF   
	e |-----0------|                                            
	B |-----0------|
	G |-----1------|
	D |-----2------|
	A |-----2------|
	E |-----0------|
	EOF
	;;
	
	[Ee]maj7) cat <<-EOF   
	e |-----0------|                                            
	B |-----0------|
	G |-----1------|
	D |-----1------|
	A |-----2------|
	E |-----0------|
	EOF
	;;
	
	[Ee]7) cat <<-EOF   
	e |-----0------|                                            
	B |-----0------|
	G |-----1------|
	D |-----0------|
	A |-----2------|
	E |-----0------|
	EOF
	;;
	
	[Ee]m) cat <<-EOF   
	e |-----0------|                                            
	B |-----0------|
	G |-----0------|
	D |-----2------|
	A |-----2------|
	E |-----0------|
	EOF
	;;
	
	[Ee]m7) cat <<-EOF   
	e |-----0------|                                            
	B |-----3------|
	G |-----0------|
	D |-----2------|
	A |-----2------|
	E |-----0------|
	EOF
	;;
	
	[Ff]) cat <<-EOF   
	e |-----1------|                                            
	B |-----1------|
	G |-----2------|
	D |-----3------|
	A |-----x------|
	E |-----x------|
	EOF
	;;
	
	[Ff]maj7) cat <<-EOF   
	e |-----0------|                                            
	B |-----1------|
	G |-----2------|
	D |-----3------|
	A |-----x------|
	E |-----x------|
	EOF
	;;
	
	[Ff]7) cat <<-EOF   
	e |-----1------|                                            
	B |-----1------|
	G |-----2------|
	D |-----1------|
	A |-----3------|
	E |-----1------|
	EOF
	;;
	
	[Ff]m) cat <<-EOF   
	e |-----1------|                                            
	B |-----1------|
	G |-----1------|
	D |-----3------|
	A |-----x------|
	E |-----x------|
	EOF
	;;
	
	[Ff]m7) cat <<-EOF   
	e |-----1------|                                            
	B |-----1------|
	G |-----1------|
	D |-----1------|
	A |-----3------|
	E |-----1------|
	EOF
	;;
	
	[Gg]) cat <<-EOF   
	e |-----3------|                                            
	B |-----0------|
	G |-----0------|
	D |-----0------|
	A |-----2------|
	E |-----3------|
	EOF
	;;
	
	[Gg]maj7) cat <<-EOF   
	e |-----2------|                                            
	B |-----0------|
	G |-----0------|
	D |-----0------|
	A |-----x------|
	E |-----3------|
	EOF
	;;
	
	[Gg]7) cat <<-EOF   
	e |-----1------|                                            
	B |-----0------|
	G |-----0------|
	D |-----0------|
	A |-----2------|
	E |-----3------|
	EOF
	;;
	
	[Gg]m) cat <<-EOF   
	e |-----3------|                                            
	B |-----3------|
	G |-----3------|
	D |-----0------|
	A |-----x------|
	E |-----x------|
	EOF
	;;
	
	[Gg]m7) cat <<-EOF   
	e |-----0------|                                            
	B |-----3------|
	G |-----0------|
	D |-----3------|
	A |-----1------|
	E |-----x------|
	EOF
	;;
	
	-v) cat <<-EOF
	version 0.1
	EOF
	;;
	
	*) cat <<-EOF
	${yellow}Please entere a valid chord${reset}
	EOF
	;;
esac

#cat <<EOF
#${green}$draw${reset}
#EOF
